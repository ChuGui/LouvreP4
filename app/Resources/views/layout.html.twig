<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Le Louvre{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/louvreTicket/css/layout.css') }}">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    {% endblock %}

</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top" id="navbar">
    <div class="container">
        <div class="navbar-header col-md-3" id="navbar-header">
            <a class="navbar-brand" href="{{ path('louvre_ticket_homepage') }}" id="logo">Le Louvre</a>
        </div>
        <div id="balises" class="container col-md-8">
            <ul class="nav nav-pills" role="tablist">
                <li role="presentation" class="col-md-3" id="selectionBalise"><a href="{{ path('louvre_ticket_homepage') }}"><span class="badge">1</span> Selection des billets  </a></li>
                <li><span class="glyphicon glyphicon-triangle-right" style="color: white"></span></li>
                <li role="presentation" id="paiementBalise" class="col-md-3" style="pointer-events: none;cursor: default;" ><a href="#"><span class="badge">2</span> Paiement</a></li>
                <li><span class="glyphicon glyphicon-triangle-right" style="color: white"></span></li>
                <li role="presentation" class="col-md-3" id="confirmationBalise" style="pointer-events: none;cursor: default;"><a href="#"> <span class="badge">3</span> Confirmation</a></li>
            </ul>
        </div>
    </div>
</nav>


<div id="content">

    {% block body %}

    {% endblock %}
</div>

<hr>
<footer>
    <h1>Footer.</h1>
</footer>

{% block javascripts %}

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

{% endblock %}

</body>
</html>